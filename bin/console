#!/usr/bin/env ruby

require 'bundler/setup'
require 'kittikrb/cursor'
require 'pry'
require 'awesome_print'

def reload!
  $LOADED_FEATURES.select { |feat| feat =~ /\/kittikrb\// }.each(&method(:load))
end

def run
  KittikRb::Cursor::Cursor.new
end

AwesomePrint.defaults = { indent: -2 }
AwesomePrint.pry!

Pry.start
